<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Fact</title>
</head>
<body>
    <h1><%= locals.fact %></h1>
    <form>
        <input type="submit" value="submit">
    </form>
    
    <script>
        const form = document.querySelector('form');
        const factElement = document.querySelector('h1'); // Get reference to h1
      
        form.addEventListener('submit', (event) => {
          event.preventDefault();
      
          fetch('/submit').then(response => response.json()) // Parse JSON response
            .then(data => {
              factElement.textContent = data.fact; // Update h1 text content
            })
            .catch((error) => {
              console.error('Error submitting form:', error);
            });
        });
      </script>
</body>
</html>